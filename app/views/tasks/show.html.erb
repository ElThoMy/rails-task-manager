<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<p><%= @task.completed? ? "This task is complete" : "This task is not complete yet" %></p>
<%= link_to "Edit", edit_path %>
<%= link_to "Back", tasks_path %>
<%= link_to "Delete",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
